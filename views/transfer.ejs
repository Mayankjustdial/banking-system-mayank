<%- include("partials/header") %>
<div class="transfer-header">
    <h1>Transfer to : </h1>
</div>

<div class="customer-list container text-center animate__animated animate__backInUp ">
    <table class="table table-dark table-hover">
        <thead class = header1>
            <tr>
                <th scope="col">Customer Name</th>
                <th scope="col">Email</th>
                <th scope="col">Balance</th>
                <th></th>
            </tr>
        </thead>
        <% for(let current of customers){ %>
            <tbody class="header2">
                <% if(!customer._id.equals(current._id)){ %>
                    <tr class ="header2">
                        <td><%= current.name %></td>
                        <td><%= current.email%></td>
                        <td><%= current.credits%></td>
              <td><button class="transfer-btn"><a href="/view/<%= customer._id %>/<%= 
                 current._id %>">Transfer</a></button></td>
                    </tr>
                <% } %>
            </tbody>
            <% } %>
        </table>
        
</div>
<%- include("partials/footer") %>