<%- include("partials/header") %>
    <div class=" animate__animated animate__backInRight text-center history-header my-3">
        <h1>TRANSACTION HISTORY</h1>
    </div>


<div class="animate__animated animate__backInUp container my-3 text-center">
    <table class="table table-dark table-hover">
        <thead class="header1" >
            <tr>
                <th>Sender</th>
                <th>Reciever</th>
                <th>Amount transfer</th>
                <th>Time</th>
            </tr>
        </thead>
        <% for(let transaction of transactions){ %>
            <tbody class="header2">
                <tr>
                    <td><%= transaction.fromName %></td>
                    <td><%= transaction.toName %></td>
                    <td><%= transaction.transfer %></td>
                    <td><%= transaction.time %></td>
                </tr>
            </tbody>
            <% } %>
        </table>
        
</div>
</body>
</html>
