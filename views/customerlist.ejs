<%- include("partials/header") %>

<h1 class="animate__animated animate__backInRight text-center my-3 view-header">Customer Details</h1>


    <div class="animate__animated animate__backInUp customer-list container text-center ">

		<table class="table table-dark table-hover">
			<thead class = header1>
				<tr>
					<th scope="col">Customer Name</th>
					<th scope="col">Email</th>
					<th scope="col">Balance</th>
					<th scope="col">Transfer</th>
				</tr>
			</thead>
			<% for(let customer of customers){ %>
				<tbody class="header2">
					<tr>
						<td><%= customer.name%></td>
						<td><%= customer.email%></td>
						<td><%= customer.credits%></td>
						<td><button class="select-btn"><a href="/view/<%= customer._id %>">Select</a>
						</button></td>
					</tr>
				</tbody>
				<% } %>
			</table>
            
	</div>
        
<%- include("partials/footer") %>
